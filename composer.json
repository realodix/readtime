{
    "name": "realodix/readtime",
    "description": "Medium's like reading time estimation.",
    "license": "MIT",
    "type": "library",
    "authors": [{"name": "Budi Hermawan", "role": "Developer"}],
    "homepage": "https://github.com/realodix/readtime",
    "require": {
        "php": "^8.1",
        "illuminate/collections": "^10.0 || ^11.0",
        "symfony/options-resolver": "^6.1 || ^7.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^10.5 || ^11.0",
        "realodix/relax": "^1.15"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Realodix\\ReadTime\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Realodix\\ReadTime\\Test\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "php-cs-fixer fix -v",
        "test": "phpunit"
    }
}
