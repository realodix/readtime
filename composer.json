{
    "name": "realodix/readtime",
    "description": "Medium's like reading time estimation.",
    "license": "MIT",
    "type": "library",
    "authors": [{"name": "Budi Hermawan", "role": "Developer"}],
    "homepage": "https://github.com/realodix/readtime",
    "require": {
        "php": "^8.0",
        "illuminate/collections": "^9.50",
        "symfony/options-resolver": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "realodix/relax": "dev-main"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Realodix\\ReadTime\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Realodix\\ReadTime\\Test\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "php-cs-fixer fix -v",
        "test": "phpunit"
    }
}
