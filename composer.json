{
    "name": "realodix/readtime",
    "description": "Medium's like reading time estimation.",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/realodix/readtime",
    "authors": [
        {
            "name": "Budi Hermawan",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "aimeos/map": "^3.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.4",
        "phpunit/phpunit": "^9.5",
        "realodix/cs-config": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "Realodix\\ReadTime\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Realodix\\ReadTime\\Test\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "php-cs-fixer fix -v",
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
